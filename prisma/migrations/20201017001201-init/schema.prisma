datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Whisky {
  id String @id @default(uuid())
  createdAt  DateTime  @default(now())
  name String
  age Int
  blended Boolean

  // Relationship
  distillerId  String
  distiller    Distiller  @relation(fields: [distillerId], references: [id])
}

model Distiller {
  id String @id @default(uuid())
  createdAt  DateTime  @default(now())
  name String
  
  // Relationship
  whiskys Whisky[]
}